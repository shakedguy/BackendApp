<MudAppBar Style="height: 10vh;" Color="Color.Primary" Fixed="false">
    <MudIconButton Size="Size.Large" Variant="Variant.Outlined" Style="border-color: transparent;" OnClick="@OnClick" Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" />
    <MudSpacer />
    <MudIconButton Icon="@Icons.Filled.ColorLens" Color="Color.Default" OnClick="@ToggleTheme" />
</MudAppBar>

@code {

    [Parameter]
    public EventCallback OnClick { get; set; }

    [Parameter]
    public EventCallback ToggleTheme { get; set; }
}
