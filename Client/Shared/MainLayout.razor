@inherits LayoutComponentBase
@using BackendApp.Client.Components
@using Blazored.LocalStorage
<MudThemeProvider Theme="@_currentTheme" />
<MudDialogProvider FullWidth="true"
                   MaxWidth="MaxWidth.ExtraSmall"
                   CloseButton="true"
                   DisableBackdropClick="true"
                   Position="DialogPosition.Center"
                   CloseOnEscapeKey="true" />
<MudSnackbarProvider />
<MudLayout>
    <MudAppBar Color="Color.Primary" Elevation="1" Dense="@dense">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudSpacer />
        <MudIconButton Icon="@Icons.Filled.ColorLens" Color="Color.Default" OnClick="ChangeThemeAsync" />
    </MudAppBar>
    <MudDrawer @bind-Open="@open" Color="Color.Primary" ClipMode="clipMode" Elevation="1" Variant="@DrawerVariant.Temporary">
        <MudDrawerHeader Style="justify-content: space-around;">
            <MudText Typo="Typo.h6">Backend App</MudText>
            <MudIconButton OnClick="@ToggleDrawer" Variant="Variant.Outlined" Style="border: transparent; color: white" Icon="@Icons.Filled.ArrowBack" Size="Size.Large" />
        </MudDrawerHeader>
        <MudNavMenu>
            <NavMenu onClick="@ToggleDrawer" />
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent Style="height: 100vh; width: 100vw;">
        @Body
    </MudMainContent>
</MudLayout>

@code {
    bool open = false;
    bool dense = false;
    DrawerClipMode clipMode = DrawerClipMode.Never;

    void ToggleDrawer() => open = !open;


}